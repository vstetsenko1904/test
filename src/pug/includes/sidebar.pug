include mixins.pug

.logo.logo--sidebar-top
    +icon('logo', 'logo__icon')
    span.logo__text Dashboard
    span.logo__version v.01
button.mobilemenu-toggler
    +icon('menu', 'mobilemenu-toggler__icon')
nav.navigation
    ul.navigation__list
        li.navigation__item 
            a.navigation__link(href="#", title="Dashboard")
                +icon('key-square', 'navigation__icon')
                span.navigation__text Dashboard
                +icon('chevron-right', 'navigation__link-arrow')
        li.navigation__item 
            a.navigation__link(href="#", title="Product")
                +icon('3d-square', 'navigation__icon')
                span.navigation__text Product
                +icon('chevron-right', 'navigation__link-arrow')
        li.navigation__item 
            a.navigation__link.navigation__link--active(href="#", title="Customers")
                +icon('user-square', 'navigation__icon')
                span.navigation__text Customers
                +icon('chevron-right', 'navigation__link-arrow')
        li.navigation__item 
            a.navigation__link(href="#", title="Income")
                +icon('wallet-money', 'navigation__icon')
                span.navigation__text Income
                +icon('chevron-right', 'navigation__link-arrow')
        li.navigation__item 
            a.navigation__link(href="#", title="Promote")
                +icon('discount-shape', 'navigation__icon')
                span.navigation__text Promote
                +icon('chevron-right', 'navigation__link-arrow')
        li.navigation__item 
            a.navigation__link(href="#", title="Help")
                +icon('message-question', 'navigation__icon')
                span.navigation__text Help
                +icon('chevron-right', 'navigation__link-arrow')
.user-info
    img.user-info__avatar(src="../src/images/avatar.png", alt="")
    .user-info__container-right
        .user-info__name Evano
        .user-info__post Project Manager

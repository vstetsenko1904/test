include mixins.pug

.logo.logo--sidebar-top
    img.logo__img(src="../src/images/logo.svg", height="37", width="37" alt="Dashboard")
    span.logo__text Dashboard
    span.logo__version v.01
nav.navigation
    ul.navigation__list
        li.navigation__item 
            a.navigation__link(href="", title="Dashboard")
                +icon('key-square', 'navigation__icon')
                span.navigation__text Dashboard
        li.navigation__item Product
            +icon('3d-square')
        li.navigation__item Customers
            +icon('user-square')
        li.navigation__item Income
            +icon('wallet-money')
        li.navigation__item Promote
            +icon('discount-shape')
        li.navigation__item Help
            +icon('message-question')
.user-info
    img.user-info__avatar(src="../src/images/avatar.png", alt="")
    .user-info__name Evano
    .user-info__post Project Manager
